<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="700dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:layout_marginTop="220dp"
        android:text="@string/shoe_year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoeInformation" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:layout_marginTop="288dp"
        android:text="@string/shoe_condition"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoeInformation"
        app:layout_constraintVertical_bias="0.355" />

    <EditText
        android:id="@+id/useAns4"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"></EditText>

    <EditText
        android:id="@+id/useAns3"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"></EditText>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:layout_marginTop="380dp"
        android:text="@string/shoe_color"
        app:layout_constraintBottom_toTopOf="@+id/submitForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoeInformation"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:text="@string/shoe_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoeInformation" />

    <EditText
        android:id="@+id/useAns2"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"></EditText>

    <EditText
        android:id="@+id/useAns1"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/ShoeName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"></EditText>

    <TextView
        android:id="@+id/shoeInformation"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="@string/shoeInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/useAns5"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck"></EditText>

    <Button
        android:id="@+id/submitForm"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:text="@string/submit_Form"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <TextView
        android:id="@+id/ShoeName"
        android:layout_width="241dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:text="@string/shoe_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shoeInformation" />

</androidx.constraintlayout.widget.ConstraintLayout>